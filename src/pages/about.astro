      const help = document.querySelector('.filter-help');

      if (!toggle || !items.length) return;

      const setLegacyVisible = (visible) => {
        document.documentElement.classList.toggle('show-legacy', visible);
        toggle.setAttribute('aria-pressed', String(visible));
        toggle.classList.toggle('is-active', visible);

        const label = visible ? 'Hide older entries' : 'Show all older entries';
        toggle.setAttribute('aria-label', label);
        toggle.setAttribute('title', label);
        if (help) help.textContent = visible ? 'Showing older entries' : 'Show all older entries';
      };

      toggle.addEventListener('click', () => {
        const visible = !document.documentElement.classList.contains('show-legacy');
        setLegacyVisible(visible);
      });

      setLegacyVisible(false);
    })();
